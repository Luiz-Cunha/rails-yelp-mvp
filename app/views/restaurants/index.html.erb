<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 text-center">
      <h1>INDEX RESTAURANTS</h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% @restaurants.each do |restaurant| %>
        <div class="card mb-3">
          <div class="card-body">
            <p class='px-2'><%= restaurant.name %> - <%= restaurant.address %> - <%= restaurant.category %> - <%= restaurant.avg_rating %></p>
            <%= link_to "Show this restaurant", restaurant, class: "btn btn-primary" %>
            <%= link_to "Add a review", new_restaurant_review_path(restaurant), class: "btn btn-secondary" %>
          </div>
        </div>
      <% end %>
      <%= link_to "Add a new Restaurant", new_restaurant_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
